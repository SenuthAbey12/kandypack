{
  "scripts": {
    "start-all": "powershell -ExecutionPolicy Bypass -File start-kandypack.ps1",
    "start-backend": "cd backend && node server.js",
    "start-frontend": "npm start",
    "test-db": "cd backend && node test_db.js",
    "clean-ports": "powershell -Command \"Get-Process | Where-Object {$_.ProcessName -eq 'node'} | Stop-Process -Force\"",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "setup": "npm install && cd backend && npm install"
  }
}